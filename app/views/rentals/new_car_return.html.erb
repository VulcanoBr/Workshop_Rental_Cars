<h1>Devolução</h1>

<% if @car.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<dl class="row">
  <dt class="col-sm-3">Idenfiticação:</dt>
  <dd class="col-sm-9"><%= @car.car_identification %></dd>
</dl> 

<%= form_for @car, url: return_car_rental_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :car_km, 'Quilometragem' %>
    <%= f.number_field :car_km, class: 'form-control' %>
  </div>
  <%= f.submit 'Devolver carro', class: 'btn btn-primary' %>
  <%= link_to 'Cancelar', root_path, class:"btn btn-outline-danger" %>
<% end %>