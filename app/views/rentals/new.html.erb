<h1>Nova Locação</h1>

<%= form_for @rental do |f| %>
  <%= render partial: 'shared/model_errors', locals: { object: @rental } %>
  <div class="form-group">
    <%= f.label :car_id, class: "form-label" %>
    <%= f.collection_select(:car_id, @cars, :id, :car_identification, 
       { include_blank: "Selecione um carro" }, id: "car-select", class: "form-control" ) %>
  </div>

  <div class="form-group">
    <%= f.label :customer_id, class: "form-label" %>
    <%= f.collection_select(:customer_id, @customers, :id, :description, 
        { include_blank: "Selecione um cliente" }, id: "customer-select", class: "form-control" ) %>
  </div>

  <div class="form-group">
    <%= f.label :scheduled_start, class: "form-label" %>
    <%= f.date_field :scheduled_start,  as: :date, value: f.object.try(:strftime,"%d/%m/%Y"), 
                      min: Date.today, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :scheduled_end, class: "form-label" %>
    <%= f.date_field :scheduled_end, min: Date.today, class: "form-control", data: { "date-format": "dd/mm/yyyy" } %>
  </div>

  <div class="form-group">
    <%= f.submit 'Enviar', class: "btn btn-primary" %>
    <%= link_to 'Cancelar', root_path, class:"btn btn-outline-danger" %>
  </div>
<% end %>

